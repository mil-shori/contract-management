# Firebase 設定
FIREBASE_PROJECT_ID_STAGING=contract-management-staging
FIREBASE_PROJECT_ID_PRODUCTION=contract-management-prod
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456789

# OpenAI API設定
OPENAI_API_KEY_STAGING=sk-your-staging-openai-key
OPENAI_API_KEY_PRODUCTION=sk-your-production-openai-key

# Google Cloud 設定
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT_STAGING=contract-management-staging
GOOGLE_CLOUD_PROJECT_PRODUCTION=contract-management-prod

# Google Workspace 設定
GOOGLE_WORKSPACE_DOMAIN=your-company.com
GOOGLE_WORKSPACE_ADMIN_EMAIL=admin@your-company.com

# Slack 通知設定
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord 通知設定（オプション）
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# データベース設定
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# セキュリティ設定
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# ログ設定
LOG_LEVEL=info
LOG_FORMAT=json

# レート制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ファイルアップロード設定
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif,txt,doc,docx

# メール設定（SMTP）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 監視・アラート設定
HEALTH_CHECK_INTERVAL=300000
ERROR_ALERT_THRESHOLD=5
PERFORMANCE_ALERT_THRESHOLD=5000

# 開発環境設定
NODE_ENV=development
REACT_APP_ENV=development
VITE_APP_ENV=development

# CI/CD設定
GITHUB_TOKEN=your-github-token
CODECOV_TOKEN=your-codecov-token

# バックアップ設定
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_BUCKET=your-backup-bucket

# キャッシュ設定
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# API設定
API_BASE_URL_STAGING=https://your-staging-api.com
API_BASE_URL_PRODUCTION=https://your-production-api.com
API_TIMEOUT=30000

# 外部サービス設定
EXTERNAL_API_KEY=your-external-api-key
WEBHOOK_SECRET=your-webhook-secret